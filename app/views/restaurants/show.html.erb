<div class="container">
<div class="show_container">
<img class="img_left" src="https://source.unsplash.com/random/?restaurant/1" alt="Restaurant image">
<div class="showtext">
<h1><%= @restaurant.name %></h1>
<div class="inline"><h3>Cuisine :</h3> <h3><%= @restaurant.category %></h2></div>
<div class="inline"><h3>Address :</h3> <h3><%= @restaurant.address %></h2></div>
<div class="inline"><h3>Phone :</h3> <h3><%= @restaurant.phone_number %></h2></div>

<br>
<div class="inline">
<h2>Reviews</h2>

<ul>
  <% @restaurant.reviews.each do |review| %>
  <li>
    <%= review.content %>
    <br>
    Rating: <%= review.rating %>
  </li>
  <% end %>

</ul>

</div>
</div>
<div class="btnbox">
<div class="btn_container">
<%= link_to "Edit", edit_restaurant_path(@restaurant) %>
<%= link_to "Back", restaurants_path %>
<%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>
</div>
</div>
</div>

</div>
