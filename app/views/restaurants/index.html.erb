<div class="container">
<h1>Restaurants</h1>
<div class="cards_container">
<% count = 0 %>
<% @restaurants.each do |restaurant| %>
<div class="card">
<h5><%= restaurant.name%></h5>

<img src="https://source.unsplash.com/random/?restaurant/<%=count%>" alt="Restaurant image" width="250px">
<div class="btn_container">
<%= link_to 'Show', restaurant %>
<%= link_to 'Edit', edit_restaurant_path(restaurant) %>
<%= link_to "Delete",restaurants_path(@restaurant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
</div>
</div>
<% count += 1 %>
<% end %>
</div>
<br>

<%= link_to 'New Restaurant', new_restaurant_path %>
</div>
